<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_200"
    android:layout_margin="6dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_note_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_note_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_note_label"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/body_note_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_note_value" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/body_note_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/body_note_label"
            tools:text="@string/note_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_note_button"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_edit"
        app:iconSize="24dp"
        app:layout_constraintRight_toLeftOf="@id/remove_post_button"
        app:layout_constraintTop_toBottomOf="@id/body_note_value" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/remove_post_button"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_trash"
        app:iconSize="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/body_note_value" />

</androidx.constraintlayout.widget.ConstraintLayout>